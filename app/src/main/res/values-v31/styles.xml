<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FrtTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorEdgeEffect">@color/accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close_white_24dp</item>
    </style>

    <style name="SplashTheme" parent="FrtTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Splashscreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_dark</item>
<!--        <item name="windowSplashScreenBackground">@drawable/shared_splashscreen</item>-->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_splash_screen</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/kt_branding_logo</item>
        <item name="postSplashScreenTheme">@style/FrtTheme</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@drawable/shared_splashscreen</item>
        <item name="windowSplashScreenAnimationDuration">800</item>
        <item name="postSplashScreenTheme">@style/FrtTheme</item>
    </style>

    <style name="BannerTextViewTheme">
        <!-- Set the background color here -->
        <item name="android:background">@drawable/rounded_corner</item>
        <!-- Set the text color here -->
        <item name="android:textColor">#FFFFFF</item>
        <!-- Set the font size here -->
        <item name="android:textSize">11sp</item>
        <!-- Set the padding (left, top, right, bottom) here -->
        <item name="android:paddingTop">8dp</item>

    </style>

    <!--    <style name="Splashscreen" parent="Splashscreen.Base"/>-->

    <style name="Splashscreen.Base" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/shared_splashscreen</item>
        <item name="android:windowAnimationStyle">@style/SplashAnimation</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>


    <style name="SplashAnimation">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="NoActionBarActionMode" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorEdgeEffect">@color/accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseDrawable">@drawable/ic_baseline_close_24</item>
    </style>

    <style name="TransitionEnabledTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="WebappCoreTheme.Fullscreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>